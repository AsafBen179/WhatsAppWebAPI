{
  "name": "whatsapp-api",
  "version": "1.0.0",
  "description": "WhatsApp API using whatsapp-web.js with PM2 support",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "docs:build": "redocly build-docs openapi.yaml --output docs/api-docs.html",
    "docs:serve": "redocly preview-docs openapi.yaml",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-api",
    "pm2:restart": "pm2 restart whatsapp-api",
    "pm2:delete": "pm2 delete whatsapp-api",
    "pm2:logs": "pm2 logs whatsapp-api",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:service-install": "pm2-service-install",
    "pm2:service-start": "pm2-service-start",
    "pm2:service-stop": "pm2-service-stop",
    "setup": "npm install && echo Setup complete!",
    "test": "node test-api.js",
    "debug": "node --inspect-brk index.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "qrcode": "^1.5.3",
    "redoc": "^2.5.0",
    "redoc-cli": "^0.13.21",
    "whatsapp-web.js": "^1.34.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.3",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "whatsapp",
    "api",
    "automation",
    "messaging",
    "pm2",
    "windows-service"
  ],
  "author": "AsafBen",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}
